<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CovrMe.Views.ContentViews.TwoTimePaymentBox">
    <VerticalStackLayout>
        <Border BackgroundColor="White" StrokeThickness="0" Padding="0,5" Margin="0,10" StrokeShape="RoundRectangle 8,8,8,8" HorizontalOptions="FillAndExpand" WidthRequest="{OnPlatform iOS='340'}">
            <Border.Shadow>
                <Shadow Brush="{StaticResource Black}" Opacity="{OnPlatform Android='0.7', iOS='0.4'}" Radius="{OnPlatform iOS='10', Android='20'}"/>
            </Border.Shadow>
            <StackLayout Padding="0">
                <Grid ColumnDefinitions="3*,4*,3*" RowDefinitions="auto,auto" Padding="10,0">
                    <Image Grid.Column="0" Grid.RowSpan="4" Grid.Row="0" Source="{Binding LogoSrc}" HeightRequest="60" WidthRequest="70" HorizontalOptions="StartAndExpand" Margin="0"/>

                    <CollectionView Grid.Row="1" Grid.RowSpan="2" Grid.Column="1" ItemsSource="{Binding Installments}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid RowDefinitions="auto, auto" ColumnDefinitions="*,3*">
                                    <Label Grid.Column="0" Grid.Row="{Binding Index}"  Text="{Binding ShortText}"       TextColor="Black" FontSize="13" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
                                    <Label Grid.Column="1" Grid.Row="{Binding Index}"  Text="{Binding PriceFormatted}" TextColor="Black" FontSize="13" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" FontAttributes="Bold" />
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                    
                    <Label Grid.Column="3" Grid.RowSpan="2" Grid.Row="0"   Text="{Binding PremiumFormatted}" TextColor="Black" FontSize="16" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
                </Grid>
            </StackLayout>
        </Border>
    </VerticalStackLayout>
</ContentView>